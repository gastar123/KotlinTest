<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/ivSale"
                android:layout_marginTop="20dp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="40dp">
        <TextView
                android:text="Акция: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvSaleName" android:text="TextView"
                android:textSize="16sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="40dp">
        <TextView
                android:text="Сроки акции: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvSaleDate" android:text="TextView"
                android:textSize="16sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="40dp">
        <TextView
                android:text="Цена: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvSalePrice" android:text="TextView"
                android:textSize="16sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="40dp">
        <TextView
                android:text="Старая цена: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvSaleOldPrice" android:text="TextView"
                android:textSize="16sp"/>
    </TableRow>
</LinearLayout>